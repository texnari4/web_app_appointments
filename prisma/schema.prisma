datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum AppointmentStatus {
  CREATED
  CONFIRMED
  CANCELLED
  NOSHOW
  DONE
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  durationMin Int
  priceCents  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  appointments Appointment[]
}

model Staff {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String?
  phone       String?
  bio         String?
  avatarUrl   String?
  specialties String[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  appointments Appointment[]
}

model Client {
  id         String   @id @default(cuid())
  tgUserId   String?          // intentionally NOT unique to avoid data loss push
  firstName  String?
  lastName   String?
  phoneEnc   String?
  emailEnc   String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  appointments Appointment[]

  @@index([tgUserId])
}

model Appointment {
  id         String            @id @default(cuid())
  serviceId  String
  staffId    String
  clientId   String?
  startAt    DateTime
  endAt      DateTime
  status     AppointmentStatus @default(CREATED)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  service    Service @relation(fields: [serviceId], references: [id])
  staff      Staff   @relation(fields: [staffId], references: [id])
  client     Client? @relation(fields: [clientId], references: [id])

  @@index([staffId, startAt])
  @@index([serviceId])
}
